<Application
    x:Class="_2isaForumAppMobile.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_2isaForumAppMobile">

    <Application.Resources>
        <Style x:Key="StyleButtonMenu" TargetType="Button">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0 5"/>
        </Style>

        <Style x:Key="StyleMenu" TargetType="StackPanel">
            <Setter Property="Background" Value="Orange"/>
        </Style>
        
        <Style x:Key="StyleTitre" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Orange"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StyleItemList" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="10,10"/>
        </Style>
    </Application.Resources>
</Application>
